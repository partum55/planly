{
  "name": "planly-desktop",
  "version": "1.0.0",
  "description": "Planly Desktop - AI agent for planning activities from chat conversations",
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc",
    "start": "npm run build:ts && electron .",
    "dev": "tsc && electron .",
    "build": "npm run build:ts && electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^8.2.0",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  },
  "build": {
    "appId": "com.planly.desktop",
    "productName": "Planly",
    "files": [
      "dist/**/*",
      "src/ui/**/*",
      "package.json"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}
