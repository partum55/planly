{
  "name": "planly-desktop",
  "version": "1.0.0",
  "description": "Planly Desktop - AI agent for planning activities from chat conversations",
  "author": "Planly Team",
  "repository": "github:partum55/planly",
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc",
    "build:vendor": "node -e \"const fs=require('fs'),p=require('path');const d=p.join('src','ui','vendor');fs.mkdirSync(d,{recursive:true});for(const f of['tesseract.min.js','worker.min.js']){fs.copyFileSync(p.join('node_modules','tesseract.js','dist',f),p.join(d,f))}\"",
    "start": "npm run build:vendor && npm run build:ts && electron .",
    "dev": "npm run build:vendor && tsc && electron .",
    "build": "npm run build:vendor && npm run build:ts && electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^8.2.0",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  },
  "build": {
    "appId": "com.planly.desktop",
    "productName": "Planly",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/ui/**/*",
      "package.json"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "build/icon.png",
      "artifactName": "Planly-${version}-linux.${ext}"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.png",
      "artifactName": "Planly-${version}-win.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "artifactName": "Planly-${version}-mac.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
