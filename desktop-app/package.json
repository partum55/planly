{
  "name": "planly-desktop",
  "version": "1.0.0",
  "description": "Planly Desktop - AI agent for planning activities from chat conversations",
  "author": {
    "name": "Planly Team",
    "email": "planly@proton.me"
  },
  "license": "MIT",
  "repository": "github:partum55/planly",
  "homepage": "https://github.com/partum55/planly",
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc",
    "build:vendor": "node -e \"const fs=require('fs'),p=require('path');const d=p.join('src','ui','vendor');fs.mkdirSync(d,{recursive:true});for(const f of['tesseract.min.js','worker.min.js']){fs.copyFileSync(p.join('node_modules','tesseract.js','dist',f),p.join(d,f))}\"",
    "lint": "tsc --noEmit",
    "start": "npm run build:vendor && npm run build:ts && electron .",
    "dev": "npm run build:vendor && tsc && electron .",
    "compile": "npm run build:vendor && npm run build:ts",
    "pack": "npm run compile && electron-builder --dir",
    "dist": "npm run compile && electron-builder",
    "dist:linux": "npm run compile && electron-builder --linux",
    "dist:win": "npm run compile && electron-builder --win",
    "dist:mac": "npm run compile && electron-builder --mac"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^8.2.0",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  },
  "build": {
    "appId": "com.planly.desktop",
    "productName": "Planly",
    "copyright": "Copyright Â© 2025 Planly Team",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "src/ui/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "eng.traineddata",
        "to": "eng.traineddata"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png",
      "artifactName": "Planly-${version}-linux-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png",
      "artifactName": "Planly-${version}-win-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "artifactName": "Planly-${version}-mac-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "publish": null
  }
}
